@model marafi1.Models.clients

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/NewFolder1/Shared/_ThirdLayout.cshtml";
}

<h2>حذف</h2>

<h3>هل بالفعل تريد حذف هذا العنصر؟؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>الإسم</label>
        </dt>

        <dd >
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            <label>إسم الشركة</label>
        </dt>

        <dd style="padding-top:5px;">
            @Html.DisplayFor(model => model.Company.name_comp)
        </dd>

        <dt>
            <label>العنوان</label>
        </dt>

        <dd style="padding-top:5px;">
            @Html.DisplayFor(model => model.address)
        </dd>

        <dt>
            <label>قيمة الشحن</label>
        </dt>

        <dd style="padding-top:5px;">
            @Html.DisplayFor(model => model.value)
        </dd>

        <dt>
            <label>رقم الهاتف</label>
        </dt>

        <dd style="padding-top:5px;">
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
            <label>المرسل</label>
        </dt>

        <dd style="padding-top:5px;">
            @Html.DisplayFor(model => model.sender)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="padding-top:30px;">
            <input type="submit" value="حذف" class="btn btn-default" style="background-color:blue; color:white;" /> |
            @Html.ActionLink("الرجوع إلى الخلف", "Index")
        </div>
    }
</div>
