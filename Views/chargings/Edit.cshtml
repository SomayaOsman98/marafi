@model marafi1.Models.charging

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/NewFolder1/Shared/_ThirdLayout.cshtml";
}

<h2>تعديل</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_charging)

        <div class="form-group">
            <div class="col-md-2" style="direction:ltr; font-size:18px;">نوع الشحن</div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.name_charg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name_charg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" style="background-color:blue; color:white;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع إلى الخلف", "Index")
</div>
